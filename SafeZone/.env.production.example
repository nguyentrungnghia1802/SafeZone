# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Docker Configuration
DOCKER_USERNAME=your_dockerhub_username
VERSION=1.0.0

# Application
APP_NAME=SafeZone
APP_ENV=production
APP_KEY=base64:your_generated_app_key_here
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_DOMAIN=your-domain.com

# Port Configuration (để tránh conflict với dự án khác)
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443
NODE_PORT=7001
MYSQL_PORT=3308
REDIS_PORT=6380

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=SafeZone
DB_USERNAME=safezone
DB_PASSWORD=your_secure_db_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# Cache & Queue
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# External APIs
MAPTILER_KEY=your_maptiler_api_key
NODE_SERVER_KEY=your_random_secret_key
WINDY_API_KEY=your_windy_api_key
GEMINI_API_KEY=your_gemini_api_key

# SMS (Optional)
SMS_ENABLED=false
VONAGE_SMS_FROM=+1234567890
VONAGE_KEY=your_vonage_key
VONAGE_SECRET=your_vonage_secret

# AI Prediction (Optional)
PREDICTION_ENABLED=false
PREDICTION_PROVIDER=gemini

# Shelter Configuration
SHELTER_SEARCH_RADIUS_DEFAULT=15000
SHELTER_MAX_RESULTS=5
SHELTER_DISTANCE_UNIT=km
